<fw:AcrylicWindow x:Class="Logos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Logos"
        mc:Ignorable="d"
        xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Height="494" Width="800"
        fw:AcrylicWindow.ExtendViewIntoTitleBar="True"
        WindowStartupLocation="CenterScreen" MinWidth="800" MinHeight="494"
        DataContext="{Binding RelativeSource={x:Static RelativeSource.Self}}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" fw:PointerTracker.Enabled="True" Background="#C0424242">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Path=ProductName}"
                               FontSize="20" Margin="10" VerticalAlignment="Center" FontFamily="Consolas"/>
                </StackPanel>
                <ListView Name ="MenuList" FontSize="15">
                    <ListViewItem Name="MenuItemText" Padding="1">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="LetterTBoxOutline" Margin="15"/>
                            <TextBlock Text="文字" FontFamily="微軟正黑體" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Name="MenuItemDraw" Padding="1">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Draw" Margin="15"/>
                            <TextBlock Text="繪圖" FontFamily="微軟正黑體" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Name="MenuItemAbout" Padding="1">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AboutOutline" Margin="15"/>
                            <TextBlock Text="關於" FontFamily="微軟正黑體" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListViewItem>
                </ListView>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="1" Background="Black">

        </Grid>
    </Grid>
</fw:AcrylicWindow>
